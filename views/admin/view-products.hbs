<section>
    <div class="container">
      <div class="row mt-4">
        <a href="/admin/add-products" class="btn btn-success ml-auto">Add products</a>
      </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">description</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
    </tr>
    {{/each}}
   
  </tbody>
</table>
    </div>
</section>